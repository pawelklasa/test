rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Features collection - authenticated users can read/write features in their projects
    match /features/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Project categories - authenticated users can read/write categories for any project
    match /projectCategories/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Projects collection - authenticated users can read/write projects
    match /projects/{document} {
      allow read, write: if request.auth != null;
    }
  }
}
